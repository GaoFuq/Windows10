    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/menu_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/start_menu_action_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@mipmap/menu_simple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="开始"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/explorer_switch"
            android:background="@drawable/start_menu_action_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@mipmap/user_account_simple" />

            <TextView
                android:id="@+id/phoneName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="MI 5"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/explorer_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/setting_switch"
            android:background="@drawable/start_menu_action_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@mipmap/explorer_simple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="文件资源管理器"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/power_switch"
            android:background="@drawable/start_menu_action_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@mipmap/setting_simple" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="设置"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/power_switch"
            android:layout_width="match_parent"
