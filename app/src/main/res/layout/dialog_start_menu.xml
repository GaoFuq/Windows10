                    app:metroBackground="#7463ff"/>
                <com.xpping.windows10.widget.MetroView
                    android:id="@+id/cat_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calendar"
